@using System.Security.Principal

@if (User.Identity?.IsAuthenticated == true)
{
        <li class="nav-item">
            <span class="navbar-text">Hello @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Sign in</a>
        </li>
}
