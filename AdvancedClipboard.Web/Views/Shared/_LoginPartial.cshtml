@using System.Security.Principal

<ul class="navbar-nav d-flex align-items-center">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link @(ViewData["Title"] as string == "Profile" ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>

        <form class="form-inline nav-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-primary btn-sm text-white">Sign Out</button>
        </form>
    }
</ul>